<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BeFitMob.Pages.SessionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Sesje treningowe">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Moje sesje treningowe"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label x:Name="InfoLabel"
                   TextColor="Gray" />

            <CollectionView x:Name="SessionsList">
                <CollectionView.EmptyView>
                    <Label Text="Brak sesji treningowych." />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="10" BorderColor="#cccccc">
                            <VerticalStackLayout>
                                <Label Text="{Binding StartTime, StringFormat='Początek: {0:dd.MM.yyyy HH:mm}'}" />
                                <Label Text="{Binding EndTime, StringFormat='Koniec: {0:dd.MM.yyyy HH:mm}'}" />
                                <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                    <Button Text="Edytuj"
                                            CommandParameter="{Binding Id}"
                                            Clicked="OnEditClicked" />
                                    <Button Text="Usuń"
                                            BackgroundColor="DarkRed"
                                            CommandParameter="{Binding Id}"
                                            Clicked="OnDeleteClicked" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <BoxView HeightRequest="1" Color="#cccccc" Margin="0,10,0,10" />

            <Label Text="Formularz sesji"
                   FontAttributes="Bold" />

            <Label Text="Data rozpoczęcia" />
            <DatePicker x:Name="StartDatePicker" />

            <Label Text="Godzina rozpoczęcia" />
            <TimePicker x:Name="StartTimePicker" />

            <Label Text="Data zakończenia" />
            <DatePicker x:Name="EndDatePicker" />

            <Label Text="Godzina zakończenia" />
            <TimePicker x:Name="EndTimePicker" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Nowa sesja"
                        Clicked="OnNewClicked" />
                <Button Text="Zapisz sesję"
                        Clicked="OnSaveClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
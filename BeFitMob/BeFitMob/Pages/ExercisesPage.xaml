<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BeFitMob.Pages.ExercisesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ćwiczenia">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Wykonane ćwiczenia"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label x:Name="InfoLabel"
                   TextColor="Gray" />

            <CollectionView x:Name="ExercisesList">
                <CollectionView.EmptyView>
                    <Label Text="Brak wykonanych ćwiczeń." />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="10" BorderColor="#cccccc">
                            <VerticalStackLayout>
                                <Label Text="{Binding ExerciseType.Name}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding TrainingSession.StartTime, StringFormat='Sesja: {0:dd.MM.yyyy HH:mm}'}" />
                                <Label Text="{Binding Weight, StringFormat='Obciążenie: {0} kg'}" />
                                <Label Text="{Binding Sets, StringFormat='Serie: {0}'}" />
                                <Label Text="{Binding Reps, StringFormat='Powtórzenia w serii: {0}'}" />
                                <Label Text="{Binding TotalReps, StringFormat='Łącznie powtórzeń: {0}'}" />
                                <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                    <Button Text="Edytuj"
                                            CommandParameter="{Binding Id}"
                                            Clicked="OnEditClicked" />
                                    <Button Text="Usuń"
                                            BackgroundColor="DarkRed"
                                            CommandParameter="{Binding Id}"
                                            Clicked="OnDeleteClicked" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <BoxView HeightRequest="1" Color="#cccccc" Margin="0,10,0,10" />

            <Label Text="Formularz ćwiczenia"
                   FontAttributes="Bold" />

            <Label Text="Sesja treningowa" />
            <Picker x:Name="SessionPicker"
                    Title="Wybierz sesję" />

            <Label Text="Typ ćwiczenia" />
            <Picker x:Name="ExerciseTypePicker"
                    Title="Wybierz typ ćwiczenia" />

            <Label Text="Obciążenie (kg)" />
            <Entry x:Name="WeightEntry"
                   Keyboard="Numeric"
                   Placeholder="Np. 50" />

            <Label Text="Liczba serii" />
            <Entry x:Name="SetsEntry"
                   Keyboard="Numeric"
                   Placeholder="Np. 3" />

            <Label Text="Liczba powtórzeń w serii" />
            <Entry x:Name="RepsEntry"
                   Keyboard="Numeric"
                   Placeholder="Np. 10" />

            <Label Text="Notatki (opcjonalnie)" />
            <Editor x:Name="NotesEditor"
                    AutoSize="TextChanges"
                    Placeholder="Dodatkowe informacje" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Nowe ćwiczenie"
                        Clicked="OnNewClicked" />
                <Button Text="Zapisz ćwiczenie"
                        Clicked="OnSaveClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BeFit.Pages.SessionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Sesje treningowe">

    <StackLayout Padding="20" Spacing="10">

        <Label Text="Moje sesje treningowe"
               FontSize="24"
               HorizontalOptions="Center" />

        <Label x:Name="InfoLabel"
               TextColor="Gray" />

        <Button Text="Dodaj nową sesję"
                x:Name="AddSessionButton"
                Clicked="OnAddSessionClicked" />

        <CollectionView x:Name="SessionsList">
            <CollectionView.EmptyView>
                <Label Text="Brak sesji treningowych do wyświetlenia." />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10" BorderColor="#cccccc">
                        <VerticalStackLayout>
                            <Label Text="{Binding StartTime, StringFormat='Początek: {0:dd.MM.yyyy HH:mm}'}" />
                            <Label Text="{Binding EndTime, StringFormat='Koniec: {0:dd.MM.yyyy HH:mm}'}" />

                            <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                                <Button Text="Edytuj"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding Id}" />
                                <Button Text="Usuń"
                                        BackgroundColor="DarkRed"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding Id}" />
                            </StackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BeFit.Pages.ExerciseTypesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Typy ćwiczeń">

    <StackLayout Padding="20" Spacing="10">

        <Label Text="Lista typów ćwiczeń"
               FontSize="24"
               HorizontalOptions="Center" />

        <Label Text="Jako gość możesz tylko przeglądać listę. Dodawanie i edycja są dostępne wyłącznie dla administratora."
               FontSize="12"
               TextColor="Gray" />

        <Button Text="Dodaj nowy typ ćwiczenia"
                x:Name="AddButton"
                Clicked="OnAddClicked" />

        <CollectionView x:Name="ExerciseTypesList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10" BorderColor="#cccccc">
                        <StackLayout>
                            <Label Text="{Binding Name}"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Description}" />

                            <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                                <Button Text="Edytuj"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding Id}" />
                                <Button Text="Usuń"
                                        BackgroundColor="DarkRed"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding Id}" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>